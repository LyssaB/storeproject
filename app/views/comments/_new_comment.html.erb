<% if signed_in? %>
	<h3>Add your review!</h3>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p>
			<div class="col-sm-6">
				<%= f.label :body, "Review" %><br>
				<%= f.text_area :body, :class => "col-sm-12" %>
			</div>
			<div class="col-sm-6 rating stars">
				<!--<%= f.label :rating, "Rating" %><br>
				<%= f.text_field :rating, class: "rating" %>-->
			</div>
		</p>
		<p>
			<%= f.submit "Submit" %>
		</p>
	<% end %>
<% end %>