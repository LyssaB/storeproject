<h1>
  <%= @product.name %>
</h1>
<div class="prod_container col-md-10 col-md-offset-1">
  <%= image_tag(@product.image_url, class: "img-responsive") if @product.image_url %>

  <p>
    <%= @product.description %>
    <%= @product.colour %>
    <%= @product.price %>
  </p>
  <p>Average rating:
    <div class="rated" data-score="<%= @product.average_rating %>"></div>
  <p>
  <%= render "comments/new_comment" %>
  <p>
    <%= render "comments/comments" %>
    <%= will_paginate @comments %>
  </p>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

</div>