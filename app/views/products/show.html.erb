<h1>
  <%= @product.name %>
</h1>
<div class="prod_container col-md-10 col-md-offset-1">
  <%= image_tag(@product.image_url, class: "img-responsive") if @product.image_url %>

  <p>
    <%= @product.description %>
    <%= @product.colour %>
    <%= @product.price %>
  </p>

  <p>
    <h3>Product Reviews</h3>
    <h4>The Best</h4>
    <%= @product.highest_rating_comment.body %>
    <h4>The Worst</h4>
    <%= @product.lowest_rating_comment.body %>
  </p>
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>

</div>